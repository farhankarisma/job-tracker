// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  preview  = ["relationJoins"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"] 
}

// Job application model
model Job {
  id          String   @id @default(cuid())
  company     String
  position    String
  status      JobStatus @default(APPLIED)
  appliedAt   DateTime @default(now()) @map("applied_at")
  description String?
  salary      String?
  location    String?
  jobUrl      String?  @map("job_url")
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Link to Supabase auth user
  userId      String   @map("user_id")
  
  @@map("jobs")
  @@schema("public")
}

// Job status enum
enum JobStatus {
  APPLIED
  INTERVIEWING
  OFFERED
  REJECTED
  WITHDRAWN
  
  @@schema("public")
}

// Contact model for networking
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  company   String?
  position  String?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Link to Supabase auth user
  userId    String   @map("user_id")
  
  @@map("contacts")
  @@schema("public")
}